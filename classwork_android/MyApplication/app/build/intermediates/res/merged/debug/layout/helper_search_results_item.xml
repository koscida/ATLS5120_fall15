<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding"
    android:background="@drawable/grid_item_border"
    android:id="@+id/searchResults_item"
    android:onClick="goToPlace">

    <!-- Image -->
    <LinearLayout
        android:layout_width="@dimen/search_results_img"
        android:layout_height="@dimen/search_results_img"
        android:orientation="horizontal">
        <kodestudios.safespace2.UrlImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:id="@+id/searchResults_image"
            android:contentDescription="" />
    </LinearLayout>


    <!-- Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_weight="0.85"
        android:weightSum="1">

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchResults_name"
            android:textSize="@dimen/activity_header_1"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_marginHalf"
            android:layout_marginTop="@dimen/activity_marginHalf"
            android:orientation="horizontal">

            <!-- Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:id="@+id/searchResults_type"/>

            <!-- Dist -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/searchResults_dist"/>

        </RelativeLayout>

        <!-- Rating -->
        <kodestudios.safespace2.RatingImageView
            android:layout_width="@dimen/search_results_rating_width"
            android:layout_height="@dimen/search_results_rating_height"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:id="@+id/searchResults_rating"/>


    </LinearLayout>

