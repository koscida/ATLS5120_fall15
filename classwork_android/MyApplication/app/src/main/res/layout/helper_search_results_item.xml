<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding"
    android:background="@drawable/grid_item_border">

    <!-- Image -->
    <LinearLayout
        android:layout_width="@dimen/search_results_img"
        android:layout_height="@dimen/search_results_img"
        android:orientation="horizontal">
        <kodestudios.safespace2.UrlImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:id="@+id/searchResults_image"
            android:contentDescription="" />
    </LinearLayout>


    <!-- Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingStart="@dimen/activity_padding"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:layout_weight="0.85">

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchResults_name"
            android:textSize="@dimen/activity_header_1"/>

        <!-- Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchResults_type"/>

        <!-- Dist -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchResults_dist"/>


    </LinearLayout>

</LinearLayout>